
 <% if @galaxy.errors.any? %>
    <% @galaxy.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
<% end %>
   

<%= form_for @galaxy do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>
    <%= f.fields_for :planets do |planets_fields| %>
        <%= planets_fields.label "Planet Name"%>
        <%= planets_fields.text_field :name %>
    <% end %>
    <%= f.submit %>
<% end %>